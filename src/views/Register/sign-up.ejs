<main>   
   <section id="sign-up">
      <h2 class="section-title">Crie uma conta agora</h2>
      <form class="sign-up__form form-content" action="/register" method="post">
         <div class="flex-content">
            <div class="input-content">
               <div class="form__box">
                  <label for="username">Nome</label><br/>
                  <input class="form__box__input-box" type="text" name="username" id="username" placeholder="Maurício de Souza">
                  <p class="error-message">  </p>
               </div>
               <div class="form__box">
                  <label for="email">Email</label><br/>
                  <input class="form__box__input-box" type="text" name="email" id="email" placeholder="mauricio@gmail.com"/>
                  <p class="error-message">  </p>
                  <p class="error-message">  </p>
               </div>
               <div class="form__box">
                  <label for="user_password">Senha</label><br/>
                  <input class="form__box__input-box" type="password" name="user_password" id="user_password"/>
                  <p class="error-message">  </p>
               </div>
            </div>
            <div class="input-content">
               <div class="form__box">
                  <label for="tel">Telefone</label><br/>
                  <input class="form__box__input-box" type="text" name="tel" id="tel" placeholder="(11) 97612-1284">
                  <p class="error-message">  </p>
                  <p class="error-message">  </p>
               </div>
               <div class="form__box">
                  <label for="dt_birth">Data de nascimento</label><br/>
                  <input class="form__box__input-box" type="date" name="dt_birth" id="dt_birth" placeholder="11/07/1995"/>
                  <p class="error-message">  </p>
               </div>
               <div class="form__box">
                  <label for="genre"> Gênero </label>
                  <select class="form__box__input-box" name="genre" id="genre">
                     <option value=""> Escolha de gênero </option>
                     <option value="1"> Masculino </option>
                     <option value="2"> Feminino </option>
                     <option value="3"> Outro </option>
                     <option value="4"> Prefiro não dizer </option>
                  </select>
                  <p class="error-message">  </p>
               </div>
            </div>
         </div>
         <p class="success-message"> Usuário cadastrado com sucesso!! </p>
         <button class="btn">Entrar</button>
      </form>
      <span>Já possui uma conta? <a href="/login"><b>Entrar</b></a></span></a>
   </section>
</main>
<div class="line"> </div>